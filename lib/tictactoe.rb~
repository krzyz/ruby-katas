class Board
  def initialize
    @grid = Hash.new
    (1..3).each do |i|
      (1..3).each do |j|
        @grid[ [i,j] ] = ' '
      end
    end
  end

  def move(row, column, piece)
    unless (1..3) === row && (1..3) === column
      raise ArgumentError, "Row and column must be 1, 2 or 3"
    end
    unless ['o', 'x'].include? piece
      raise ArgumentError, "Piece must be 'o' or 'x'"
    end
    @grid[ [row, column] ] = piece
  end

  def to_s
    puts @grid
  end
end
